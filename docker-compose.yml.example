version: '3.8'
services:
  sleefs-app:
    image: maomuriel/ubun22_04-php8_1-apache2_4:0.2.0
    container_name: "sleefs-app"
    stdin_open: false # docker run -i
    tty: false # docker run -t
    environment:
      - "TZ=America/Bogota"
    ports:
      - "8080:80"
    volumes:
      - "/path/to/sleefs-app-migration:/var/www/app"
    depends_on:
      - "sleefs-db"
    links:
      - "sleefs-db:mysql"
  sleefs-db:
    image: docker.io/library/mariadb:10.11.2
    container_name: "sleefs-db"
    environment:
      - "MYSQL_ROOT_PASSWORD="
      - "TZ=America/Bogota"
    volumes:
      - "/path/to/mariadb-data/apps.sleefs.com:/var/lib/mysql"
    ports:
      - "3306:3306"
  sleefs-db-phpmia:
    container_name: "sleefs-db-phpmia"
    image: "phpmyadmin/phpmyadmin"
    environment:
      - "PMA_HOST=sleefs-db"
    ports:
      - "8089:80"
    depends_on: 
      - "sleefs-db"
    links: 
      - "sleefs-db"